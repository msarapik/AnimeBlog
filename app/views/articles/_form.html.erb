<% form_for @article do |f| %>
  <%= f.error_messages %>

  Title:<br /> <%= f.text_field :title %><br />
  Content:<br /> <%= f.text_area :content, :size => '34 x 10' %><br />
  Author:<br /> <%= f.text_field :author %><br />
  Category:<br /> <%= f.select :category_id, Category.all.collect {|p| [ p.name, p.id ] } %>

  <%- if @article.new_record? -%>
    <%= submit_tag 'Create' %>
  <%- else -%>
    <%= submit_tag 'Update' %>
  <%- end -%>

  <%= link_to 'Back', articles_path %>
<% end %>
