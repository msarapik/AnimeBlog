
<%- title @article.title -%>

<%= render @article %>

<h3>Comments:</h3>

<div id="comments">
  <%= render @comments %>
</div>

<hr />

<h3>Feel free to leave a comment! (^.^)</h3>

<%- form_for Comment.new, :live_validations => true do |f| -%>
  <p>
    <%= f.hidden_field :article_id, :value => @article.id %>
    <%= f.label :author, 'Author:' %><br /> 
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :content, 'Content:' %><br /> 
    <%= f.text_area :content, :size => '75 x 10' %>
  </p>

  <%= submit_tag 'Submit' %>
<%- end -%>
